{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Sun Tzu Quotes API"
  },
  "paths": {
    "/quote": {
      "get": {
        "description": "Get a random quote",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A single quote",
            "examples": {
              "application/json": "{\n                  \"quote\": \"The supreme art of war is to subdue the enemy without losing sight of the battle.\"\n              }"
            },
            "schema": {
              "type": "object",
              "properties": {
                "quote": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/quote/{id}": {
      "get": {
        "description": "Get a quote by id",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The quote id",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "A single quote",
            "examples": {
              "application/json": "{\n                  \"quote\": \"The supreme art of war is to subdue the enemy without losing sight of the battle.\"\n              }"
            },
            "schema": {
              "type": "object",
              "properties": {
                "quote": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Quote not found",
            "examples": {
              "application/json": "{\n                \"error\": \"Quote not found\"\n              }"
            }
          }
        }
      }
    },
    "/quotes": {
      "get": {
        "description": "Get all quotes",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "withIds",
            "in": "query",
            "description": "Whether to include the quote id in the response",
            "required": false,
            "type": "boolean"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of quotes",
            "examples": {
              "application/json": "[\n  \"QUOTE\",\n \"QUOTE\",\n  \"QUOTE\",.......]"
            },
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}